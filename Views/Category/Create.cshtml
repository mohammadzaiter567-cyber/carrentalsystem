@model projectadvanced.Models.Category
@{
    ViewData["Title"] = "Create Category";
}

<div class="page-header">
    <h1><i class="fas fa-plus-circle me-3"></i>Create New Category</h1>
    <p class="mb-0">Add a new car category to the system</p>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="mb-3">
                <label asp-for="Name" class="form-label">
                    <i class="fas fa-tag me-2"></i>Category Name <span class="text-danger">*</span>
                </label>
                <input asp-for="Name" class="form-control" placeholder="e.g., Sedan, SUV, Luxury" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to List
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Create Category
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

