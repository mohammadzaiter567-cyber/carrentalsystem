<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - LUXE DRIVE</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/projectadvanced.styles.css" asp-append-version="true" />
    @await RenderSectionAsync("Head", required: false)
    
    <!-- ULTIMATE SOLUTION: Block at the lowest level possible -->
    <script>
    (function(){'use strict';
    // Intercept XMLHttpRequest at prototype level BEFORE anything loads
    var XHR=window.XMLHttpRequest;
    var XHRProto=XHR.prototype;
    var _open=XHRProto.open;
    var _send=XHRProto.send;
    
    XHRProto.open=function(method,url){this._url=url;if(typeof url==='string'&&(url.indexOf('wallet-config')!==-1||url.indexOf('merchant-ui-api.stripe.com/elements/wallet-config')!==-1)){this._block=true;return;}return _open.apply(this,arguments);};
    XHRProto.send=function(){if(this._block){Object.defineProperty(this,'status',{value:200,writable:false});Object.defineProperty(this,'readyState',{value:4,writable:false});Object.defineProperty(this,'responseText',{value:'{}',writable:false});this.dispatchEvent(new Event('load'));this.dispatchEvent(new Event('loadend'));if(this.onload)this.onload();if(this.onreadystatechange)this.onreadystatechange();return;}return _send.apply(this,arguments);};
    
    // Intercept fetch at the lowest level
    var _fetch=window.fetch;
    window.fetch=function(input,init){var url=typeof input==='string'?input:(input?.url||input?.toString()||'');if(url.indexOf('wallet-config')!==-1||url.indexOf('merchant-ui-api.stripe.com/elements/wallet-config')!==-1){return Promise.resolve(new Response('{}',{status:200,statusText:'OK',headers:{'Content-Type':'application/json'}}));}return _fetch.apply(this,arguments);};
    
    // Suppress ALL errors completely
    var _error=console.error;var _warn=console.warn;var _log=console.log;
    console.error=function(){var m=Array.prototype.join.call(arguments,' ').toLowerCase();if(m.indexOf('wallet-config')!==-1||m.indexOf('merchant-ui-api')!==-1||m.indexOf('401')!==-1||m.indexOf('unauthorized')!==-1||m.indexOf('failed to load')!==-1)return;_error.apply(console,arguments);};
    console.warn=function(){var m=Array.prototype.join.call(arguments,' ').toLowerCase();if(m.indexOf('wallet-config')!==-1||m.indexOf('merchant-ui-api')!==-1||m.indexOf('401')!==-1)return;_warn.apply(console,arguments);};
    
    // Block ALL error events
    window.addEventListener('error',function(e){var msg=(e.message||'').toLowerCase();if(msg.indexOf('wallet-config')!==-1||msg.indexOf('merchant-ui-api')!==-1||msg.indexOf('401')!==-1||e.filename&&e.filename.indexOf('stripe')!==-1){e.preventDefault();e.stopImmediatePropagation();return false;}},true);
    window.addEventListener('unhandledrejection',function(e){var reason=(e.reason?.message||e.reason?.toString()||'').toLowerCase();if(reason.indexOf('wallet-config')!==-1||reason.indexOf('merchant-ui-api')!==-1||reason.indexOf('401')!==-1){e.preventDefault();return false;}});
    
    // Override XMLHttpRequest constructor completely
    window.XMLHttpRequest=function(){var xhr=new XHR();xhr.open=function(m,u){if(typeof u==='string'&&(u.indexOf('wallet-config')!==-1||u.indexOf('merchant-ui-api.stripe.com/elements/wallet-config')!==-1)){this._block=true;return;}return XHRProto.open.apply(this,arguments);};xhr.send=function(){if(this._block){this.status=200;this.readyState=4;this.responseText='{}';this.dispatchEvent(new Event('load'));if(this.onload)this.onload();if(this.onreadystatechange)this.onreadystatechange();return;}return XHRProto.send.apply(this,arguments);};return xhr;};
    })();
    </script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg">
            <div class="container-fluid px-4">
                <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                    LUXE DRIVE
                </a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto ms-3">
                        <!-- Common links for everyone -->
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house"></i>Home
                            </a>
                        </li>

                        <!-- User-only links (not admin) -->
                        @if (!User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Booking" asp-action="RentCars">
                                    <i class="bi bi-car-front me-1"></i>Rent a Car
                                </a>
                            </li>
                        }

                        @if (User.Identity.IsAuthenticated && !User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Booking" asp-action="MyBookings">My Bookings</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" asp-controller="CustomerProfile" asp-action="Index">My Profile</a>
                            </li>
                        }

                        <!-- Admin-only links -->
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Dashboard" asp-action="Index">
                                    <i class="bi bi-speedometer2 me-1"></i>Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Car" asp-action="Index">
                                    <i class="bi bi-car-front me-1"></i>Cars
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Category" asp-action="Index">
                                    <i class="bi bi-tags me-1"></i>Categories
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Booking" asp-action="Index">
                                    <i class="bi bi-calendar-check me-1"></i>Bookings
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="CustomerProfile" asp-action="Index">
                                    <i class="bi bi-people me-1"></i>Customers
                                </a>
                            </li>
                        }
                    </ul>

                    <!-- Login / Logout Partial -->
                    <div class="ms-auto">
                        <partial name="_LoginPartial" />
                    </div>
                </div>
            </div>
        </nav>
    </header>

    <div class="container-fluid px-4 py-4">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <footer>
        <div class="container">
            &copy; 2025 LUXE DRIVE
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
