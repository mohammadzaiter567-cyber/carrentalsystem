@model IEnumerable<projectadvanced.Models.Car>
@{
    ViewData["Title"] = "Manage Cars";
}

<style>
    .cars-page {
        max-width: 1400px;
        margin: 0 auto;
    }
    .page-title {
        background: linear-gradient(135deg, #2c3e50 0%, #3498db 100%);
        color: white;
        padding: 2rem;
        border-radius: 1rem;
        margin-bottom: 2rem;
        box-shadow: 0 10px 30px rgba(44, 62, 80, 0.3);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }
    .page-title h1 {
        font-size: 2rem;
        font-weight: 700;
        margin: 0;
    }
    .page-title p {
        opacity: 0.9;
        margin: 0;
    }
    .btn-add {
        background: white;
        color: #2c3e50;
        border: none;
        padding: 0.75rem 1.5rem;
        border-radius: 0.5rem;
        font-weight: 600;
        transition: all 0.3s;
    }
    .btn-add:hover {
        background: #f0f0f0;
        color: #1a252f;
        transform: translateY(-2px);
    }
    .stats-row {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
        gap: 1.5rem;
        margin-bottom: 2rem;
    }
    .stat-card {
        background: white;
        border-radius: 1rem;
        padding: 1.5rem;
        text-align: center;
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
    }
    .stat-card .number {
        font-size: 2.5rem;
        font-weight: 700;
    }
    .stat-card .label {
        color: #666;
        font-size: 0.9rem;
    }
    .stat-card.total .number { color: #2c3e50; }
    .stat-card.available .number { color: #28a745; }
    .stat-card.unavailable .number { color: #dc3545; }
    .cars-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 1.5rem;
    }
    .car-card {
        background: white;
        border-radius: 1rem;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
        transition: all 0.3s;
    }
    .car-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 25px rgba(0,0,0,0.15);
    }
    .car-image {
        width: 100%;
        height: 180px;
        object-fit: cover;
        background: #f5f5f5;
    }
    .car-image-placeholder {
        width: 100%;
        height: 180px;
        background: linear-gradient(135deg, #f5f5f5 0%, #e0e0e0 100%);
        display: flex;
        align-items: center;
        justify-content: center;
    }
    .car-image-placeholder i {
        font-size: 3rem;
        color: #ccc;
    }
    .car-body {
        padding: 1.5rem;
    }
    .car-header {
        display: flex;
        justify-content: space-between;
        align-items: flex-start;
        margin-bottom: 1rem;
    }
    .car-title {
        font-size: 1.25rem;
        font-weight: 700;
        color: #333;
        margin: 0;
    }
    .car-model {
        color: #666;
        font-size: 0.9rem;
    }
    .car-price {
        font-size: 1.25rem;
        font-weight: 700;
        color: #2c3e50;
    }
    .car-price small {
        font-size: 0.75rem;
        font-weight: 400;
        color: #888;
    }
    .car-details {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 0.75rem;
        margin-bottom: 1rem;
        padding: 1rem;
        background: #f8f9fa;
        border-radius: 0.5rem;
    }
    .car-detail {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        font-size: 0.85rem;
        color: #555;
    }
    .car-detail i {
        color: #2c3e50;
    }
    .car-status {
        display: inline-block;
        padding: 0.35rem 0.75rem;
        border-radius: 2rem;
        font-size: 0.8rem;
        font-weight: 600;
    }
    .car-status.available {
        background: #d4edda;
        color: #155724;
    }
    .car-status.unavailable {
        background: #f8d7da;
        color: #721c24;
    }
    .car-actions {
        display: flex;
        gap: 0.5rem;
        margin-top: 1rem;
        padding-top: 1rem;
        border-top: 1px solid #eee;
    }
    .car-actions .btn {
        flex: 1;
        padding: 0.5rem;
        font-size: 0.85rem;
    }
    .empty-state {
        text-align: center;
        padding: 4rem 2rem;
        background: white;
        border-radius: 1rem;
        box-shadow: 0 4px 15px rgba(0,0,0,0.08);
    }
    .empty-state i {
        font-size: 4rem;
        color: #ddd;
        margin-bottom: 1rem;
    }
</style>

<div class="cars-page">
    <div class="page-title">
        <div>
            <h1><i class="bi bi-car-front-fill me-3"></i>Manage Cars</h1>
            <p>Add, edit, and manage your car fleet</p>
        </div>
        <a asp-action="Create" class="btn btn-add">
            <i class="bi bi-plus-lg me-2"></i>Add New Car
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="empty-state">
            <i class="bi bi-car-front"></i>
            <h3>No Cars Yet</h3>
            <p class="text-muted">Get started by adding your first car to the fleet.</p>
            <a asp-action="Create" class="btn btn-success btn-lg mt-3">
                <i class="bi bi-plus-lg me-2"></i>Add Your First Car
            </a>
        </div>
    }
    else
    {
        <div class="stats-row">
            <div class="stat-card total">
                <div class="number">@Model.Count()</div>
                <div class="label">Total Cars</div>
            </div>
            <div class="stat-card available">
                <div class="number">@Model.Count(c => c.IsAvailable)</div>
                <div class="label">Available</div>
            </div>
            <div class="stat-card unavailable">
                <div class="number">@Model.Count(c => !c.IsAvailable)</div>
                <div class="label">Unavailable</div>
            </div>
        </div>

        <div class="cars-grid">
            @foreach (var car in Model)
            {
                <div class="car-card">
                    @if (!string.IsNullOrEmpty(car.ImagePath))
                    {
                        <img src="@car.ImagePath" alt="@car.Brand @car.Model" class="car-image" />
                    }
                    else
                    {
                        <div class="car-image-placeholder">
                            <i class="bi bi-car-front"></i>
                        </div>
                    }
                    <div class="car-body">
                        <div class="car-header">
                            <div>
                                <h5 class="car-title">@car.Brand</h5>
                                <span class="car-model">@car.Model</span>
                            </div>
                            <div class="car-price">
                                $@car.DailyPrice.ToString("F0")<small>/day</small>
                            </div>
                        </div>
                        <div class="car-details">
                            <div class="car-detail">
                                <i class="bi bi-calendar3"></i>
                                <span>@car.Year</span>
                            </div>
                            <div class="car-detail">
                                <i class="bi bi-credit-card-2-front"></i>
                                <span>@car.PlateNumber</span>
                            </div>
                            <div class="car-detail">
                                <i class="bi bi-tag"></i>
                                <span>@(car.Category?.Name ?? "No Category")</span>
                            </div>
                            <div class="car-detail">
                                <span class="car-status @(car.IsAvailable ? "available" : "unavailable")">
                                    @(car.IsAvailable ? "Available" : "Unavailable")
                                </span>
                            </div>
                        </div>
                        <div class="car-actions">
                            <a asp-action="Edit" asp-route-id="@car.Id" class="btn btn-outline-primary">
                                <i class="bi bi-pencil me-1"></i>Edit
                            </a>
                            <a asp-action="Delete" asp-route-id="@car.Id" 
                               class="btn btn-outline-danger"
                               onclick="return confirm('Are you sure you want to delete this car?')">
                                <i class="bi bi-trash me-1"></i>Delete
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
