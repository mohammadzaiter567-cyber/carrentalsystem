@model projectadvanced.Models.Car
@{
    ViewData["Title"] = "Edit Car";
    var categories = ViewBag.Categories as List<projectadvanced.Models.Category> ?? new List<projectadvanced.Models.Category>();
}

<div class="page-header">
    <h1><i class="fas fa-edit me-3"></i>Edit Car</h1>
    <p class="mb-0">Update car information</p>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <input type="hidden" asp-for="Id" />

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Brand" class="form-label">
                        <i class="fas fa-car me-2"></i>Brand <span class="text-danger">*</span>
                    </label>
                    <input asp-for="Brand" class="form-control" placeholder="e.g., Toyota, Honda, BMW" />
                    <span asp-validation-for="Brand" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="Model" class="form-label">
                        <i class="fas fa-car-side me-2"></i>Model <span class="text-danger">*</span>
                    </label>
                    <input asp-for="Model" class="form-control" placeholder="e.g., Camry, Civic, X5" />
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="Year" class="form-label">
                        <i class="fas fa-calendar me-2"></i>Year <span class="text-danger">*</span>
                    </label>
                    <input asp-for="Year" class="form-control" type="number" min="1950" max="2100" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="PlateNumber" class="form-label">
                        <i class="fas fa-hashtag me-2"></i>Plate Number <span class="text-danger">*</span>
                    </label>
                    <input asp-for="PlateNumber" class="form-control" placeholder="e.g., ABC-1234" />
                    <span asp-validation-for="PlateNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="CategoryId" class="form-label">
                        <i class="fas fa-tag me-2"></i>Category
                    </label>
                    <select asp-for="CategoryId" class="form-select">
                        <option value="">-- Select Category --</option>
                        @foreach (var category in categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="DailyPrice" class="form-label">
                        <i class="fas fa-dollar-sign me-2"></i>Daily Price <span class="text-danger">*</span>
                    </label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input asp-for="DailyPrice" class="form-control" type="number" step="0.01" min="0" placeholder="0.00" />
                    </div>
                    <span asp-validation-for="DailyPrice" class="text-danger"></span>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="ImageFile" class="form-label">
                    <i class="bi bi-image me-2"></i>Car Image (Optional)
                </label>
                <input asp-for="ImageFile" class="form-control" type="file" accept="image/*" />
                @if (!string.IsNullOrEmpty(Model.ImagePath))
                {
                    <div class="mt-2">
                        <img src="@Model.ImagePath" alt="@Model.Brand" class="img-thumbnail" style="max-width: 200px;" />
                        <small class="d-block text-muted mt-1">Current image. Upload a new one to replace.</small>
                    </div>
                }
                <span asp-validation-for="ImageFile" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <div class="form-check form-switch">
                    <input asp-for="IsAvailable" class="form-check-input" type="checkbox" />
                    <label asp-for="IsAvailable" class="form-check-label">
                        <i class="fas fa-check-circle me-2"></i>Available for rent
                    </label>
                </div>
            </div>

            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to List
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Update Car
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

