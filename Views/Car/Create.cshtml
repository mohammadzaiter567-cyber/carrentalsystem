@model projectadvanced.Models.Car
@{
    ViewData["Title"] = "Add New Car";
    var categories = ViewBag.Categories as List<projectadvanced.Models.Category> ?? new List<projectadvanced.Models.Category>();
}

<div class="page-header">
    <h1><i class="fas fa-plus-circle me-3"></i>Add New Car</h1>
    <p class="mb-0">Add a new car to your fleet</p>
</div>

<div class="card">
    <div class="card-body">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <div class="row">
                <!-- Brand Input -->
                <div class="col-md-6 mb-3">
                    <label asp-for="Brand" class="form-label">
                        <i class="fas fa-car me-2"></i>Brand <span class="text-danger">*</span>
                    </label>
                    <input asp-for="Brand" class="form-control" placeholder="e.g., Toyota, Honda, BMW" id="Brand" />
                    <span asp-validation-for="Brand" class="text-danger"></span>
                </div>

                <!-- Model Dropdown -->
                <div class="col-md-6 mb-3">
                    <label asp-for="Model" class="form-label">
                        <i class="fas fa-car-side me-2"></i>Model <span class="text-danger">*</span>
                    </label>
                    <select asp-for="Model" class="form-select" id="ModelDropdown">
                        <option value="">-- Select Model --</option>
                    </select>
                    <span asp-validation-for="Model" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <!-- Year Input -->
                <div class="col-md-6 mb-3">
                    <label asp-for="Year" class="form-label">
                        <i class="fas fa-calendar me-2"></i>Year <span class="text-danger">*</span>
                    </label>
                    <input asp-for="Year" class="form-control" type="number" min="1950" max="2100" id="Year" />
                    <span asp-validation-for="Year" class="text-danger"></span>
                </div>

                <!-- Plate Number -->
                <div class="col-md-6 mb-3">
                    <label asp-for="PlateNumber" class="form-label">
                        <i class="fas fa-hashtag me-2"></i>Plate Number <span class="text-danger">*</span>
                    </label>
                    <input asp-for="PlateNumber" class="form-control" placeholder="e.g., ABC-1234" />
                    <span asp-validation-for="PlateNumber" class="text-danger"></span>
                </div>
            </div>

            <div class="row">
                <!-- Category -->
                <div class="col-md-6 mb-3">
                    <label asp-for="CategoryId" class="form-label">
                        <i class="fas fa-tag me-2"></i>Category
                    </label>
                    <select asp-for="CategoryId" class="form-select">
                        <option value="">-- Select Category --</option>
                        @foreach (var category in categories)
                        {
                            <option value="@category.Id">@category.Name</option>
                        }
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <!-- Daily Price -->
                <div class="col-md-6 mb-3">
                    <label asp-for="DailyPrice" class="form-label">
                        <i class="fas fa-dollar-sign me-2"></i>Daily Price <span class="text-danger">*</span>
                    </label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input asp-for="DailyPrice" class="form-control" type="number" step="0.01" min="0" placeholder="0.00" />
                    </div>
                    <span asp-validation-for="DailyPrice" class="text-danger"></span>
                </div>
            </div>

            <!-- Image Upload -->
            <div class="mb-3">
                <label asp-for="ImageFile" class="form-label">
                    <i class="bi bi-image me-2"></i>Car Image (Optional)
                </label>
                <input asp-for="ImageFile" class="form-control" type="file" accept="image/*" />
                <span asp-validation-for="ImageFile" class="text-danger"></span>
                <small class="form-text text-muted">Upload an image for the car (JPG, PNG, etc.)</small>
            </div>

            <!-- Availability -->
            <div class="mb-3">
                <div class="form-check form-switch">
                    <input asp-for="IsAvailable" class="form-check-input" type="checkbox" checked />
                    <label asp-for="IsAvailable" class="form-check-label">
                        <i class="fas fa-check-circle me-2"></i>Available for rent
                    </label>
                </div>
            </div>

            <!-- Buttons -->
            <div class="d-flex justify-content-between">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-2"></i>Back to List
                </a>
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save me-2"></i>Add Car
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @Html.Partial("_ValidationScriptsPartial")

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {

            // Populate Model dropdown dynamically when Brand or Year changes
            function fetchModels() {
                var brand = $("#Brand").val();
                var year = $("#Year").val();

                if (brand && year) {
                    var apiUrl = `https://vpic.nhtsa.dot.gov/api/vehicles/GetModelsForMakeYear/make/${brand}/modelyear/${year}?format=json`;

                    $.getJSON(apiUrl, function (data) {
                        var $modelDropdown = $("#ModelDropdown");
                        $modelDropdown.empty();
                        $modelDropdown.append('<option value="">-- Select Model --</option>');

                        if (data.Results && data.Results.length > 0) {
                            $.each(data.Results, function (index, item) {
                                $modelDropdown.append(
                                    $('<option></option>').val(item.Model_Name).text(item.Model_Name)
                                );
                            });
                        } else {
                            $modelDropdown.append('<option value="">No models found</option>');
                        }
                    });
                }
            }

            $("#Brand, #Year").on("change", fetchModels);
        });
    </script>
}
