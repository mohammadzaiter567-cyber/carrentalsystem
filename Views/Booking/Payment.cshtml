@{
    ViewData["Title"] = "Payment";
    var car = ViewBag.Car as projectadvanced.Models.Car;
    var startDate = (DateTime)ViewBag.StartDate;
    var endDate = (DateTime)ViewBag.EndDate;
    var totalPrice = (decimal)ViewBag.TotalPrice;
    var days = (int)ViewBag.Days;
}

<style>
    .payment-container {
        max-width: 1000px;
        margin: 0 auto;
    }
    
    .payment-card {
        background: linear-gradient(135deg, #1e293b 0%, #334155 100%);
        border-radius: 1rem;
        padding: 2rem;
        color: white;
        position: relative;
        overflow: hidden;
        min-height: 200px;
    }
    
    .payment-card::before {
        content: '';
        position: absolute;
        top: -50%;
        right: -50%;
        width: 100%;
        height: 200%;
        background: radial-gradient(circle, rgba(245, 158, 11, 0.1) 0%, transparent 70%);
    }
    
    .payment-card .card-chip {
        width: 50px;
        height: 40px;
        background: linear-gradient(135deg, #fbbf24 0%, #f59e0b 100%);
        border-radius: 8px;
        margin-bottom: 1.5rem;
    }
    
    .payment-card .card-number {
        font-family: 'Courier New', monospace;
        font-size: 1.4rem;
        letter-spacing: 4px;
        margin-bottom: 1.5rem;
    }
    
    .payment-card .card-details {
        display: flex;
        justify-content: space-between;
    }
    
    .payment-card .card-label {
        font-size: 0.7rem;
        text-transform: uppercase;
        opacity: 0.7;
        margin-bottom: 0.25rem;
    }
    
    .payment-card .card-value {
        font-size: 0.95rem;
        text-transform: uppercase;
    }
    
    .card-brand {
        position: absolute;
        top: 1.5rem;
        right: 1.5rem;
        font-size: 2rem;
    }
    
    .form-control.card-input {
        background: rgba(255, 255, 255, 0.05);
        border: 2px solid var(--border-color);
        font-family: 'Courier New', monospace;
        letter-spacing: 2px;
    }
    
    .form-control.card-input:focus {
        background: white;
    }
    
    .secure-badge {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        background: rgba(16, 185, 129, 0.1);
        color: var(--success);
        padding: 0.5rem 1rem;
        border-radius: 2rem;
        font-size: 0.85rem;
        font-weight: 600;
    }
    
    .price-breakdown {
        background: var(--bg-body);
        border-radius: var(--radius);
        padding: 1.5rem;
    }
    
    .price-row {
        display: flex;
        justify-content: space-between;
        padding: 0.5rem 0;
    }
    
    .price-row.total {
        border-top: 2px solid var(--border-color);
        margin-top: 0.5rem;
        padding-top: 1rem;
        font-weight: 700;
        font-size: 1.2rem;
    }
    
    .price-row.total .price {
        color: var(--accent);
    }
</style>

<div class="payment-container">
    <div class="page-header text-center">
        <h1><i class="bi bi-credit-card me-3"></i>Secure Payment</h1>
        <p class="mb-0">Complete your booking with secure payment</p>
    </div>

    <div class="row g-4">
        <!-- Payment Form -->
        <div class="col-lg-7">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-credit-card-2-front me-2"></i>Payment Details</h5>
                </div>
                <div class="card-body">
                    <div class="text-center mb-4">
                        <i class="bi bi-shield-check text-success" style="font-size: 3rem;"></i>
                        <h5 class="mt-3">Secure Payment with Stripe</h5>
                        <p class="text-muted">You will be redirected to Stripe's secure payment page to complete your transaction.</p>
                    </div>

                    <div class="alert alert-info">
                        <i class="bi bi-info-circle me-2"></i>
                        <strong>Secure Payment:</strong> Your payment will be processed securely by Stripe. We never store your card details.
                    </div>

                    <div class="d-grid gap-2">
                        <form asp-action="ProceedToPayment" method="post">
                            <button type="submit" class="btn btn-primary btn-lg w-100" id="payBtn">
                                <i class="bi bi-lock-fill me-2"></i>Proceed to Secure Payment - $@totalPrice.ToString("F2")
                            </button>
                        </form>
                    </div>
                    <div class="d-grid mt-3">
                        <a asp-action="RentCars" class="btn btn-secondary">
                            <i class="bi bi-arrow-left me-2"></i>Cancel
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Order Summary -->
        <div class="col-lg-5">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0"><i class="bi bi-receipt me-2"></i>Booking Summary</h5>
                </div>
                <div class="card-body">
                    @if (car != null)
                    {
                        <div class="d-flex gap-3 mb-4">
                            @if (!string.IsNullOrEmpty(car.ImagePath))
                            {
                                <img src="@car.ImagePath" alt="@car.Brand" class="rounded" style="width: 100px; height: 75px; object-fit: cover;" />
                            }
                            else
                            {
                                <div class="bg-light rounded d-flex align-items-center justify-content-center" style="width: 100px; height: 75px;">
                                    <i class="bi bi-car-front text-muted"></i>
                                </div>
                            }
                            <div>
                                <h6 class="mb-1">@car.Brand @car.Model</h6>
                                <small class="text-muted">@car.Year â€¢ @car.PlateNumber</small>
                                @if (car.Category != null)
                                {
                                    <br /><span class="badge bg-secondary">@car.Category.Name</span>
                                }
                            </div>
                        </div>

                        <div class="mb-4">
                            <div class="row g-3">
                                <div class="col-6">
                                    <div class="p-3 bg-light rounded text-center">
                                        <i class="bi bi-calendar-event text-accent d-block mb-1"></i>
                                        <small class="text-muted d-block">Pick-up</small>
                                        <strong>@startDate.ToString("MMM dd, yyyy")</strong>
                                    </div>
                                </div>
                                <div class="col-6">
                                    <div class="p-3 bg-light rounded text-center">
                                        <i class="bi bi-calendar-check text-accent d-block mb-1"></i>
                                        <small class="text-muted d-block">Return</small>
                                        <strong>@endDate.ToString("MMM dd, yyyy")</strong>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="price-breakdown">
                            <div class="price-row">
                                <span>Daily Rate</span>
                                <span>$@car.DailyPrice.ToString("F2")</span>
                            </div>
                            <div class="price-row">
                                <span>Duration</span>
                                <span>@days day(s)</span>
                            </div>
                            <div class="price-row total">
                                <span>Total</span>
                                <span class="price">$@totalPrice.ToString("F2")</span>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="card mt-3">
                <div class="card-body">
                    <div class="d-flex align-items-center gap-2 text-muted small">
                        <i class="bi bi-shield-lock"></i>
                        <span>Your payment information is secure and encrypted</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Form submission loading state
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.querySelector('form[asp-action="ProceedToPayment"]');
            const btn = document.getElementById('payBtn');
            
            if (form && btn) {
                form.addEventListener('submit', function(e) {
                    btn.disabled = true;
                    btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Processing...';
                    // Let the form submit normally - don't prevent default
                });
            }
        });
    </script>
}

