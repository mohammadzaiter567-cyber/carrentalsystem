@model projectadvanced.Models.Payment
@{
    ViewData["Title"] = "Payment Successful";
    var payment = ViewBag.Payment as projectadvanced.Models.Payment ?? Model;
}

<div class="page-header text-center">
    <h1><i class="fas fa-check-circle text-success me-3"></i>Payment Successful!</h1>
    <p class="mb-0">Your payment has been processed successfully</p>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>
        <strong>Success!</strong> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<div class="card">
    <div class="card-body">
        @if (payment != null)
        {
            <div class="row">
                <div class="col-md-6">
                    <h5 class="mb-3"><i class="fas fa-receipt me-2"></i>Payment Details</h5>
                    <table class="table table-borderless">
                        <tr>
                            <td><strong>Payment ID:</strong></td>
                            <td>#@payment.Id</td>
                        </tr>
                        <tr>
                            <td><strong>Amount:</strong></td>
                            <td class="text-success fw-bold">$@payment.Amount.ToString("F2")</td>
                        </tr>
                        <tr>
                            <td><strong>Status:</strong></td>
                            <td>
                                <span class="badge bg-success">@payment.Status</span>
                            </td>
                        </tr>
                        <tr>
                            <td><strong>Payment Method:</strong></td>
                            <td>@payment.PaymentMethod</td>
                        </tr>
                        <tr>
                            <td><strong>Payment Date:</strong></td>
                            <td>@payment.PaymentDate.ToString("MMM dd, yyyy HH:mm")</td>
                        </tr>
                        @if (!string.IsNullOrEmpty(payment.TransactionId))
                        {
                            <tr>
                                <td><strong>Transaction ID:</strong></td>
                                <td><code>@payment.TransactionId</code></td>
                            </tr>
                        }
                        @if (!string.IsNullOrEmpty(payment.StripeSessionId))
                        {
                            <tr>
                                <td><strong>Stripe Session ID:</strong></td>
                                <td><code>@payment.StripeSessionId</code></td>
                            </tr>
                        }
                    </table>
                </div>
                <div class="col-md-6">
                    <div class="text-center">
                        <i class="fas fa-check-circle text-success" style="font-size: 5rem;"></i>
                        <h4 class="mt-3 text-success">Payment Confirmed</h4>
                        <p class="text-muted">Your booking has been confirmed and payment processed.</p>
                    </div>
                </div>
            </div>
        }
        else
        {
            <div class="alert alert-info">
                <i class="fas fa-info-circle me-2"></i>
                Payment information is being processed. Please check your bookings.
            </div>
        }

        <div class="d-flex justify-content-between mt-4">
            <a asp-controller="Booking" asp-action="MyBookings" class="btn btn-secondary">
                <i class="fas fa-list me-2"></i>View My Bookings
            </a>
            <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                <i class="fas fa-home me-2"></i>Go to Home
            </a>
        </div>
    </div>
</div>

