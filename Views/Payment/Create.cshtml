@model projectadvanced.Models.Payment
@{
    ViewData["Title"] = "Make Payment";
}

<div class="page-header">
    <h1><i class="fas fa-credit-card me-3"></i>Make Payment</h1>
    <p class="mb-0">Complete your booking payment</p>
</div>

<div class="card">
    <div class="card-body">
        <div asp-validation-summary="All" class="alert alert-danger"></div>
        
        <div class="alert alert-success">
            <h5><i class="fas fa-money-bill-wave me-2"></i>Payment Summary</h5>
            <div class="row mt-3">
                <div class="col-md-6">
                    <p class="mb-1"><strong>Booking ID:</strong> #@Model.BookingId</p>
                </div>
                <div class="col-md-6">
                    <p class="mb-1"><strong>Amount:</strong> <span class="text-success fw-bold fs-5">$@Model.Amount.ToString("F2")</span></p>
                </div>
            </div>
        </div>

        <div class="alert alert-info">
            <i class="fas fa-info-circle me-2"></i>
            <strong>Note:</strong> You will be redirected to Stripe's secure payment page to complete your transaction.
        </div>

        <div class="text-center">
            <p class="mb-4">Click the button below to proceed to payment</p>
            <form asp-action="Create" method="post" id="payment-form">
                @Html.AntiForgeryToken()
                <input type="hidden" name="BookingId" value="@Model.BookingId" />
                <input type="hidden" name="Amount" value="@Model.Amount" />
                <input type="hidden" name="PaymentMethod" value="Stripe" />
                <button type="submit" class="btn btn-success btn-lg" id="pay-button">
                    <i class="fas fa-credit-card me-2"></i>Pay $@Model.Amount.ToString("F2")
                </button>
            </form>
        </div>

        <div class="d-flex justify-content-between mt-4">
            <a asp-controller="Booking" asp-action="MyBookings" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Back to Bookings
            </a>
        </div>
    </div>
</div>
